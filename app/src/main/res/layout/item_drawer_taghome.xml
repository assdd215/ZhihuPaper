<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topic_list_home"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_48"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/space_20"
    android:orientation="horizontal"
    tools:background="@color/colorLightGray">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/home"/>

    <TextView
        android:id="@+id/item_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_20"
        android:text="首页"
        android:textSize="@dimen/textSize_16"
        android:textColor="@color/colorLightBlue"/>

    <ImageView
        android:id="@+id/follow_iv"
        android:layout_width="@dimen/space_20"
        android:layout_height="@dimen/space_20"
        android:layout_marginEnd="@dimen/space_45"
        android:layout_marginRight="@dimen/space_45"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:scaleType="centerInside"
        android:src="@drawable/menu_follow"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorCommonBgGray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="@color/colorLightBlue" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/space_40"
        android:id="@+id/login_logo"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="登  录"
        android:textColor="@color/colorLightBlue"
        android:padding="@dimen/space_35"/>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/account_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_35"
        android:paddingRight="@dimen/space_35">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_account"
            android:inputType="number"
            android:textSize="@dimen/textSize_22"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:paddingLeft="@dimen/space_35"
        android:paddingRight="@dimen/space_35"
        android:id="@+id/password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_password"
            android:textSize="@dimen/textSize_22"
            android:inputType="numberPassword"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_btn"
        android:text="登  录"
        android:textSize="@dimen/textSize_22"
        android:textColor="@color/colorWhite"
        android:background="@color/colorLightBlue"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_35"
        android:layout_marginRight="@dimen/space_35"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_35">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_textView"
            android:text="注册"
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/colorDarkGray"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foget_password"
            android:text="忘记密码？"
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/colorDarkGray"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</LinearLayout>